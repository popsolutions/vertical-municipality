<odoo>
    <record id="water_consumption_view_form_inherited" model="ir.ui.view">
        <field name="inherit_id" ref="property_water_consumption.water_consumption_view_form"/>
        <field name="name">water.consumption.view.form.inherited</field>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//field[@name='land_id']" position="after">
                <field name="rate_catchment"/>
            </xpath>
        </field>
    </record>

    <record id="water_consumption_view_tree_inherited" model="ir.ui.view">
        <field name="inherit_id" ref="property_water_consumption.water_consumption_view_tree"/>
        <field name="name">water.consumption.view.tree.inherited</field>
        <field name="model">property.water.consumption</field>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='total']" position="after">
                <field name="rate_catchment"/>
            </xpath>
        </field>
    </record>

</odoo>
